#!/bin/bash

# Install packages from Brewfile
# This runs whenever the Brewfile changes

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging functions
log_info() {
    echo -e "${BLUE}[PACKAGES]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[PACKAGES]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[PACKAGES]${NC} $1"
}

log_error() {
    echo -e "${RED}[PACKAGES]${NC} $1"
}

# Check if command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

# Brewfile hash: {{ include "Brewfile" | sha256sum }}

if ! command_exists brew; then
    log_error "Homebrew is not installed. Please run prerequisites installation first."
    exit 1
fi

log_info "Installing packages from Brewfile..."

# Get the source directory
SOURCE_DIR="{{ .chezmoi.sourceDir }}"
BREWFILE="$SOURCE_DIR/Brewfile"

if [ ! -f "$BREWFILE" ]; then
    log_error "Brewfile not found at $BREWFILE"
    exit 1
fi

# Run brew bundle
cd "$SOURCE_DIR"
if brew bundle --file="$BREWFILE"; then
    log_success "Packages installed successfully from Brewfile"
{{- if eq .chezmoi.os "darwin" }}
    if command_exists mas; then
        log_info "Mac App Store apps installed via brew bundle"
    else
        log_warning "mas not installed - Mac App Store apps were skipped"
    fi
{{- end }}
else
    log_warning "Some packages may have failed to install"
    exit 1
fi

log_success "Package installation complete!"
