#!/bin/bash

# Post-installation shell setup
# This runs once after dotfiles are applied

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging functions
log_info() {
    echo -e "${BLUE}[SHELL-SETUP]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SHELL-SETUP]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[SHELL-SETUP]${NC} $1"
}

# Check if command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

log_info "Setting up shell environment..."

{{- if eq .chezmoi.os "darwin" }}
###############################################################################
# macOS: Set default shell to fish if installed
###############################################################################

if command_exists fish; then
    FISH_PATH="$(which fish)"

    # Add fish to /etc/shells if not already there
    if ! grep -q "$FISH_PATH" /etc/shells 2>/dev/null; then
        log_info "Adding fish to /etc/shells..."
        echo "$FISH_PATH" | sudo tee -a /etc/shells >/dev/null
    fi

    # Change default shell to fish if not already set
    if [ "$SHELL" != "$FISH_PATH" ]; then
        log_info "Setting default shell to fish..."
        chsh -s "$FISH_PATH" || log_warning "Failed to change default shell to fish. You may need to do this manually."
        log_success "Default shell set to fish"
    else
        log_info "Default shell is already fish"
    fi
else
    log_warning "Fish shell not installed, skipping shell change"
fi
{{- else if eq .chezmoi.os "linux" }}
###############################################################################
# Linux: Set default shell to fish if installed
###############################################################################

if command_exists fish; then
    FISH_PATH="$(which fish)"

    # Add fish to /etc/shells if not already there
    if ! grep -q "$FISH_PATH" /etc/shells 2>/dev/null; then
        log_info "Adding fish to /etc/shells..."
        echo "$FISH_PATH" | sudo tee -a /etc/shells >/dev/null
    fi

    # Change default shell to fish if not already set
    if [ "$SHELL" != "$FISH_PATH" ]; then
        log_info "Setting default shell to fish..."
        chsh -s "$FISH_PATH" || log_warning "Failed to change default shell to fish. You may need to do this manually."
        log_success "Default shell set to fish"
    else
        log_info "Default shell is already fish"
    fi
else
    log_warning "Fish shell not installed, skipping shell change"
fi
{{- end }}

###############################################################################
# 1Password SSH setup
###############################################################################

if command_exists op; then
    log_info "1Password CLI is available"
    log_info "To setup SSH integration, run: op signin"
else
    log_warning "1Password CLI not available. Install it and run: op signin"
fi

log_success "Shell setup complete!"
log_info ""
log_info "Next steps:"
log_info "  - Restart your terminal to use the new shell"
log_info "  - Sign in to 1Password CLI: op signin"
log_info "  - Edit dotfiles: chezmoi edit <file>"
log_info "  - Add new files: chezmoi add <file>"
log_info "  - Apply changes: chezmoi apply"
